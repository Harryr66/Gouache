rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read for purchases (users need to see their order history)
    match /purchases/{purchaseId} {
      allow read: if true;
      allow write: if false; // Only backend can write
    }
    
    // Allow public read for enrollments (users need to see their courses)
    match /enrollments/{enrollmentId} {
      allow read: if true;
      allow write: if false; // Only backend can write
    }
    
    // All other existing rules
    match /episodes/{episodeId} {
      allow read: if true;
      allow write: if true;
    }
    
    match /posts/{postId} {
      allow read: if true;
      allow write: if true;
    }
    
    match /artworks/{artworkId} {
      allow read: if true;
      allow write: if true;
    }
    
    match /discussions/{discussionId} {
      allow read: if true;
      allow write: if true;
    }
    
    match /artistRequests/{requestId} {
      allow read: if true;
      allow write: if true;
    }

    match /artistInvites/{inviteId} {
      allow read: if true;
      allow write: if true;
    }
    
    match /advertisingApplications/{applicationId} {
      allow read: if true;
      allow write: if true;
    }
    
    match /userProfiles/{userId} {
      allow read: if true;
      allow write: if true;
    }
    
    match /events/{eventId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    match /marketplaceProducts/{productId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    match /newsArticles/{articleId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    match /contentReports/{reportId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    match /userReports/{reportId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    match /courses/{courseId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    match /books/{bookId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    match /affiliateRequests/{requestId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    match /advertisements/{adId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    match /advertisementAnalytics/{analyticsId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // Default rule - allow public read everywhere; writes require auth
    match /{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
